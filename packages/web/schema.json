{
  "$id": "ApplicationSchematics",
  "title": "Application Options Schema",
  "type": "object",
  "description": "Creates application",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application",
      "default": "janush-app",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Application name?"
    },
    "install": {
      "type": "boolean",
      "description": "npm run install after project generation.",
      "default": true,
      "x-prompt": "Do you want to execute the `npm run install` command after generating the project?"
    }
  },
  "required": [
    "name"
  ]
}
