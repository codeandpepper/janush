{
  "$id": "CloudSchematics",
  "title": "Cloud Template Schema",
  "type": "object",
  "description": "Creates template",
  "properties": {
    "modules": {
      "type": "array",
      "description": "Modules",
      "uniqueItems": true,
      "default": ["authentication"],
      "x-prompt": {
        "message": "Which modules would you like to use? You can add this later.",
        "type": "list",
        "items": [
          "authentication"
        ]
      }
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Install all package dependencies",
      "default": false
    }
  }
}
