{
  "$id": "ApplicationSchematics",
  "title": "Application Options Schema",
  "type": "object",
  "description": "Creates application",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application",
      "default": "janush-app",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Application name?"
    },
    "types": {
      "type": "array",
      "description": "Application type(s)",
      "uniqueItems": true,
      "default": ["web", "cloud"],
      "x-prompt": {
        "message": "Which application type would you like to use?",
        "type": "list",
        "items": [
          { "value": "cloud",  "label": "Cloud" },
          { "value": "web",  "label": "Web" }
        ]
      }
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Install all package dependencies",
      "default": false
    }
  },
  "required": [
    "name",
    "types"
  ]
}
