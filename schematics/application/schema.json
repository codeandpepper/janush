{
  "$id": "ApplicationSchematics",
  "title": "Application Options Schema",
  "type": "object",
  "description": "Schema that creates the entire codebase of the application.",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application",
      "default": "janush-app",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Application name:"
    },
    "types": {
      "type": "array",
      "description": "Application type(s)",
      "uniqueItems": true,
      "default": ["web", "cloud"],
      "x-prompt": {
        "message": "Which application type would you like to use?",
        "type": "list",
        "items": [
          { "value": "cloud", "label": "Cloud" },
          { "value": "web", "label": "Web" }
        ]
      }
    },
    "isAutoGenerated": {
      "type": "boolean",
      "description": "Says, if created by deployment bot.",
      "default": false
    },
    "skipInstall": {
      "type": "boolean",
      "description": "A boolean value that will decide to download all dependencies.",
      "default": false
    }
  },
  "required": ["name", "types"]
}
