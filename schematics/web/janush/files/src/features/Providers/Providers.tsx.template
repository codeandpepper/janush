export const Providers: FC = ({ children }) => {
  return (
    <ThemeProvider>
      <% if (isAuth) { %><UserProvider><% } %>
        <Router>
          <SuspenseProvider>{children}</SuspenseProvider>
        </Router>
      <% if (isAuth) { %></UserProvider><% } %>
