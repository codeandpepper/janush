{
  "$id": "ApplicationSchematics",
  "title": "Application Options Schema",
  "type": "object",
  "description": "Creates application",
  "properties": {
    "modules": {
      "type": "array",
      "description": "Modules",
      "uniqueItems": true,
      "default": ["authentication"],
      "x-prompt": {
        "message": "Which modules would you like to use? You can add this later.",
        "type": "list",
        "items": ["authentication"]
      }
    },
    "e2e": {
      "type": "boolean",
      "description": "E2E tests",
      "default": true,
      "x-prompt": "Do you want to have E2E tests included?"
    },
    "skipInstall": {
      "type": "boolean",
      "description": "A boolean value that will decide to download all dependencies.",
      "default": false
    }
  },
  "required": ["name", "e2e"]
}
