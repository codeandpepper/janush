{
  "$id": "ApplicationSchematics",
  "title": "Application Options Schema",
  "type": "object",
  "description": "Creates application",
  "properties": {
    "modules": {
      "type": "array",
      "description": "Modules",
      "uniqueItems": true,
      "default": ["Cypress"],
      "x-prompt": {
        "message": "Which tool do you want to use to automate e2e tests? You can add this later.",
        "type": "list",
        "items": ["Cypress"]
      }
    },
    "skipInstall": {
      "type": "boolean",
      "description": "A boolean value that will decide to download all dependencies.",
      "default": false
    }
  },
  "required": ["name"]
}
