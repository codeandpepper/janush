{
  "$id": "CloudAuthenticationSchematics",
  "title": "Cloud Authentication Schema",
  "type": "object",
  "description": "Creates authentication module",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application",
      "default": "janush-app"
    },
    "emails": {
      "type": "boolean",
      "description": "Email custom messages trigger",
      "default": true,
      "x-prompt": "[CLOUD] Do you want add an auth emails template?"
    },
    "idP": {
      "type": "array",
      "description": "Sets additional identity providers for user pool.",
      "uniqueItems": true,
      "default": [],
      "x-prompt": {
        "message": "[CLOUD] Do you want add more identity providers? (each provider requires an active developer account).",
        "type": "list",
        "items": [
          { "value": "Facebook", "label": "Facebook" },
          { "value": "Google", "label": "Google" },
          { "value": "Apple", "label": "Apple" }
        ]
      }
    },
    "usersManagement": {
      "type": "array",
      "description": "Cognito Users Management CRUD operations using AppSync resolvers.",
      "uniqueItems": true,
      "default": ["defaultGroups"],
      "x-prompt": {
        "message": "[CLOUD] Which users management resources do you want to add?",
        "type": "list",
        "items": [
          {
            "value": "defaultGroups",
            "label": "Default Cognito Groups (Admin group)"
          }
        ]
      }
    }
  }
}
