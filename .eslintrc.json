{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint", "prettier"],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"env": {
		"es6": true,
		"browser": true,
		"jest": true,
		"node": true
	},
	"rules": {
		"no-console": [
			2,
			{
				"allow": ["warn", "error"]
			}
		]
	}
}
